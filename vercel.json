{
  "version": 2,
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "builds": [
    {
      "src": "/api/index.js",
      "use": "@now/node-server"
    }
  ],
  "functions": { "api/index.js": { "memory": 512, "maxDuration": 10 } },
  "public": true,
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Requested-With,Access-Control-Allow-Headers,Authorization,Accept,Content-Type" }
      ]
    }
  ]
}
